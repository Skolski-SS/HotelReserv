<apex:page controller="PreReservationPageController">
    <apex:form >
        <apex:pageBlock title="List Prereservation Rooms">
            <apex:pageBlockSection columns="1">
                <apex:pageBlockTable value="{!prereservs}" var="prereserv" id="PreReservList">
                    
                    <apex:column headerValue="City">
                        <apex:outputField value="{!prereserv.City__c}"/>
                    </apex:column>
                    <apex:column headerValue="Hotel">
                        <apex:outputField value="{!prereserv.Hotel__c}"/>
                    </apex:column>
                    <apex:column headerValue="Room">
                        <apex:outputField value="{!prereserv.Room__c}"/>
                    </apex:column>
                    <apex:column headerValue="ChekinDate">
                        <apex:outputField value="{!prereserv.ChekinDate__c}"/>
                    </apex:column>
                <apex:column headerValue="ChekoutDate">
                        <apex:outputField value="{!prereserv.ChekoutDate__c}"/>
                    </apex:column>
                    <apex:column headerValue="Count">
                        <apex:outputField value="{!prereserv.Count__c}" />
                    </apex:column>
                    <apex:column headerValue="Email">
                        <apex:outputField value="{!prereserv.Email__c}"/>
                    </apex:column>
                    
                    <apex:column headerValue="Reserv/Edit">
                         <apex:outputLink value="/apex/PrereservToReservPage"  
                             styleClass="slds-m-top_xx-small slds-button slds-button_neutral btn">
                Reserv
                             <apex:param name="prereservroom" value="{!prereserv.id}" assignTo="{!rid}"/> 
            </apex:outputLink>
                        <apex:outputLink value="/apex/EditPreReservPage"  
                             styleClass="slds-m-top_xx-small slds-button slds-button_neutral btn">
                Edit
                             <apex:param name="prereservroom" value="{!prereserv.id}" assignTo="{!rid}"/> 
            </apex:outputLink>
                    </apex:column>
                </apex:pageBlockTable>
            </apex:pageBlockSection>
        </apex:pageBlock>
    </apex:form>
</apex:page>